<% @page_title = " | 寻找灵感，产生创意，创建家居灵感集" %>
  <div class="row">

      <div class="span12">

      <div class="box">
        <h4>按照分类目录筛选</h4>
        <% @categorys.each do |category| %>
          <%= link_to category,class:"btn" do %>
            <i class="icon-folder-open"></i>   <%= "#{category.name}" %>
          <% end %>
        <% end %>
        <%= link_to 'categorys/others',class:"btn" do %>
          <i class="icon-folder-open"></i>   <%= "其它设计" %>
        <% end %>
      </div>


      <div class="box">
        <h4>按照标签筛选</h4>
        <% @tags.each do |tag| %>
          <%= link_to tag,class:"btn" do %>
            <i class="icon-tag"></i>   <%= "#{tag.name}" %>
          <% end %>
        <% end %>
        <%= link_to 'tags/others',class:"btn" do %>
          <i class="icon-tag"></i>   其它标签
        <% end %>
      </div>

        <div class="box">
        <h3>最新上传的设计</h3>
        <%= render partial:"shared/content",locals:{designs:@designs} %>
      </div>
    </div> <!-- end of div class="span12" -->

  </div>
  <%= render "shared/flow_script" %>

