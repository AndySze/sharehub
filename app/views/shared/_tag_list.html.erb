<div class="box">
  <h4>按照标签筛选</h4>
  <% tags.each do |tag| %>

    <% if current_tag && tag.id == current_tag.id %>
    <%= link_to '#',class:"badge " do %>
      <i class="icon-tag icon-white"></i>   <%= "#{tag.name}" %>
  <% end %>
  <% else %>
    <%= link_to tag,class:"badge badge-success" do %>
      <i class="icon-tag icon-white"></i>   <%= "#{tag.name}" %>
  <% end %>
  <% end %>
<% end %>

  <% if current_tag %>
    <%= link_to 'others',class:"badge badge-success" do %>
      <i class="icon-tag icon-white"></i>   其它标签
  <% end %>
  <% else %>    
    <%= link_to '#',class:"badge " do %>
      <i class="icon-tag icon-white"></i>   其它标签
  <% end %>
  <% end %>      
</div>


