<div class="well sidebar">
  <div class="userProfile clearfix">
  <%= image_tag user.avatar.big.url,class:"pull-left avatar" %>
  <h5><%= user.name %></h5>
</div>
  <hr>
  <%= link_to "上传新设计", user, class:"btn btn-block btn-success btn-large" %>
  <hr>
  <ul class="nav nav-tabs nav-stacked">
    <li>
    <%= link_to user_collections_path(user) do %>
    <i class="icon-folder-close"></i>
    <%= "#{user.collections.count}个专辑" %>
  <% end %>
    </li>
    <li><%= link_to user_designs_path(user) do %>
    <i class="icon-upload"></i>
    <%= "#{user.designs.count}个上传" %>
  <% end %>
    </li>
  </ul>
  <h5>TA的标签</h5>
  <ul class="nav nav-tabs nav-stacked">
    <% user.tags.uniq.each do |tag| %>
      <li><%= link_to tag do %>
    <i class="icon-tag"></i> <%= "#{tag.name}" %>
<% end %>
    </li>
  <% end %>
  </ul>
  <% if Design.any? %>
  <h5>发现</h5>
  <div class="thumbnail">
    <%= link_to design = Design.all.sample do %>
      <%= image_tag(design.image.thumb,:alt => "explore", class:"img-rounded") %>
  <% end %>
      <%= link_to user_designs_path(design.collection.user) do %>
        <%= image_tag design.collection.user.avatar.normal.url,class:"pull-left avatar" %>
        <%= design.collection.user.name %>
    <% end %>
      <p><%= design.title %></p>
  </div>
<% end %>
</div>
