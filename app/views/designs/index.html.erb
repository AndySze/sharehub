<div class="container-fluid">
  <div class="row-fluid">
    <h1>Designs#index</h1>
      <ul class="thumbnails" >
    <div id="main">
    <% @designs.each do |design| %>
      <li class="item">
      <div class="thumbnail">
        <%= link_to :action => 'show',:id => design.id do %>
        <%= image_tag("#{design.image}",:alt => "#{design.title}", class:"img-rounded") %>
        <h3> <%= "#{design.title}" %></h3>
      <% end %>
      <p><%= design.user_id %></p>
    </div>
          </li>
          <% end %>
      </div>
        </ul>
  </div>
</div>
<script type="text/javascript">

var $container = $('#main');
$container.imagesLoaded(function(){
  $container.masonry({
    itemSelector : '.item',
    columnWidth : 240
  });
});

</script>
