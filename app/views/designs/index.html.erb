<div class="container-fluid">
  <div class="row-fluid">

    <% if @user %>
      <div class="span9">

      <%= render partial:"shared/content",locals:{designs:@designs} %>

    </div> <!-- end of div class="span9" -->

    <div class="span3">
      <%= render partial:"shared/user_side",locals:{user:@user} %>
    </div><!-- end of div class="span3" -->

  <% else %>
      <div class="span12">

      <div class="well">
        <h2>按照分类目录筛选</h2>
      <% @categorys.each do |category| %>

        <%= link_to "#{category.name}",category,class:"btn" %>
    <% end %>

      <%= link_to "其它设计",'categorys/others',class:"btn" %>
    </div>



    <%= render partial:"shared/content",locals:{designs:@designs} %>
  </div> <!-- end of div class="span12" -->
<% end %> <!-- end of Line4 if -->

</div>
</div>
<script type="text/javascript">

var $container = $('#main');
$container.imagesLoaded(function(){
  $container.masonry({
    itemSelector : '.item',
    columnWidth : 295
  });
});

</script>
