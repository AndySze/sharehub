<!DOCTYPE html>
<html>
<head>
<title>Sharehub</title>
<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>
<body style="background-image: url(/wall4.png); background-position: initial initial; background-repeat: initial initial; ">

<%= render "layouts/header" %>
<div class="container">
  <%= yield %>
</div>
<%= render "layouts/footer" %>

<% if Rails.env.development? %>
  <% session.each do |k,v| %>
  <%= "session[:#{k}] : #{v}" %><br>
  <% end %>

  <% flash.each do |k,v| %>
    <%= "flash[:#{k}] : #{v}" %><br>
  <% end %>

  <%= debug(params) %>
<% end %>

<!-- Login Modal -->
<div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" style="display: block; ">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">登录</h3>
  </div>
  <div class="modal-body">

    <%= form_tag(:controller =>'sessions',:action => 'create') do -%>
      <%= label_tag :name, "帐户" -%>
    <%= text_field_tag :name -%>
    <%= label_tag :password, "密码" -%>
    <%= password_field_tag :password -%>
    <p><%= submit_tag "登录",class:"btn btn-large btn-success " -%></p>
  <% end -%>
    <%= link_to "还不是会员，马上注册！",signup_path %>

  </div>
</div>



<script type="text/javascript">
//$("#signupModel").modal()                       // initialized with defaults
</script>

<%= render "shared/track_code" %>

</body>
</html>
